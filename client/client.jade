template(name='verification_confirmation')
    .ui.text.container
        h1.ui.header your email has been verified; you may close the window. 



template(name='not_found')
    .ui.center.aligned.padded.segment
        .ui.center.aligned.header not found
        if is_staff
            a.ui.button(href="/staff") 
                +i name='user shield'
                |staff
        else 
            a.ui.button(href="/") 
                +i name='home'
                |home



template(name='shortcut_modal')
    .ui.shortcut.modal
        .ui.header keyboard shortcuts
        .content
            .ui.large.list
                each shortcuts
                    .item 
                        .header #{combo}
                        .content #{action}
