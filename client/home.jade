template(name='home')
    .ui.stackable.padded.grid
        .row 
            .twelve.wide.column
                .ui.selection.list
                    a.item(href="/buildings")
                        +i name='building' classes='ui avatar image'
                        .content
                            .header 
                                |buildings
                    a.item(href="/m/food")
                        +i name='food' classes='ui avatar image'
                        .content
                            .header 
                                |food
                    a.item(href="/rentals")
                        +i name='clock' classes='ui avatar image'
                        .content
                            .header 
                                | rentals
                    a.item(href="/m/reservation")
                        +i name='invoice' classes='ui avatar image'
                        .content
                            .header
                                | reservations
                    a.item(href="/m/service")
                        +i name='work' classes='ui avatar image'
                        .content
                            .header
                                | services
                    a.item(href="/alerts")
                        +i name='bell' classes='ui avatar image'
                        .content
                            .header
                                | alerts
                    a.item(href="/users")
                        +i name='groups' classes='ui avatar image'
                        .content
                            .header
                                |users
            .four.wide.column
                +latest_activity
            
            
            

