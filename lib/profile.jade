template(name='profile_sidebar')                          
    a(href="/user/#{username}")
        .ui.inline.header
            |@#{username}
        // +user_pill
    if first_name
        .ui.inline.header #{first_name}
    if last_name
        .ui.inline.header #{last_name}
    if status 
        .ui.big.inverted.black.basic.label(title='status')
            i.clock.icon 
            |#{status}
    a.ui.large.label(href="/user/#{username}/points" title='points')
        +i name='coins'
        //- i.coins.icon
        |#{points} pts
    +link_view key='link' icon='globe'
    +public_profile_label    
    +online_label
    if linkedin_link
        a.ui.basic.circular.icon.large.compact.inverted.button.zoomer(href=linkedin_link target='_window' title='view linkedin profile')
            +i name='linkedin'
    if twitter_link
        a.ui.basic.circular.icon.large.compact.inverted.button.zoomer(href=twitter_link target='_window' title='view twitter profile')
            +i name='twitter'
