            +i name='instagram'
    if facebook_link
        a.ui.basic.circular.icon.large.compact.inverted.button.zoomer(href=facebook_link target='_window' title='view facebook profile')
            +i name='facebook'
    if one_link
        a.ui.basic.circular.icon.large.compact.inverted.button.zoomer(href=facebook_link target='_window' title='view one boulder profile')
            img.ui.avatar.image.invert(src="{{c.url 'one_logo' height=500 width=500 gravity='face' crop='fill'}}")
    if is_current_user
        a.ui.large.icon.inverted.basic.button.fly_up(href="/user/#{_id}/edit" title='profile settings')
            +i name='settings'
            unless currentUser.hide_labels
                |account
    else if currentUser.admin_mode
        a.ui.large.icon.inverted.basic.button.fly_up(href="/user/#{_id}/edit" title='profile settings')
            +i name='settings'
            unless currentUser.hide_labels
